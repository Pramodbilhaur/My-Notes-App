<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp">
        
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/viewPriority"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notesTitle"
                android:text="@string/app_name"
                android:fontFamily="@font/bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:maxLines="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notesSubtitle"
                android:text="This is dummy data. As you can see this data is only for test purpose only. So you can enjjoy the view testing. By the way i am a software engineer who is develope android apps."
                android:fontFamily="@font/regular"
                android:textColor="#D8D8D8"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notesDate"
                android:text="25 Apr, 2023"
                android:fontFamily="@font/bold"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:maxLines="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>